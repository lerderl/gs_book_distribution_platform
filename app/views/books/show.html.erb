<h1 class="text-center mt-4"><%= @book.region %></h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <%= @book.region %>
        </div>
        <div class="card-body">
          <div class="card-text text-left">Unit Price: <%= @book.price %></div>
          <div class="card-text text-left mt-2">Quantity Allocated: <%= @book.qty_allotted %></div>
          <div class="card-text text-left mt-2">Amount Allocated: <%= @book.amt_allotted %></div>
          <div class="card-text text-left mt-2">Quantity Redemeed: <%= @book.qty_paid %></div>
          <div class="card-text text-left mt-2">Amount Redemeed: <%= @book.amt_paid %></div>
          <div class="card-text text-left mt-2">Quantity Balance: <%= @book.qty_bal %></div>
          <div class="card-text text-left mt-2 mb-3">Amount Balance: <%= @book.amt_bal %></div>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-outline-info" %>
          <%= link_to "Delete", book_path(@book), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@book.created_at) %> ago, edited <%= time_ago_in_words(@book.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back to group/region list', books_path %>
