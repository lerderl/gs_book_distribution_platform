<div id="page-content">
  <h1 class="text-center mt-4">Listing all groups/regions</h1>
  <div class="container">
    <% @books.reverse_each do |book| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center">
            <div class="card-header">
              <%= link_to book.region, book_path(book), class: "text-success" %>
            </div>
            <div class="card-body">
              <p class="card-text">Qty Allocated: <%= book.qty_allotted %></p>
              <p class="card-text">Qty Bal: <%= book.qty_bal %></p>
              <%= link_to "View", book_path(book), class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn-outline-info" %>
              <%= link_to "Delete", book_path(book), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(book.created_at) %> ago, edited <%= time_ago_in_words(book.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <p>
    <%= link_to 'Create new group/region', new_book_path %>
  </p>
</div>
