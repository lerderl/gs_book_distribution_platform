<%= render 'shared/errors', obj: @region %>
<%= form_with(model: @region, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row mt-3">
    <%= f.label :region, "Group/Region name", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :region, class: "form-control shadow rounded", placeholder: "Enter a group/region" %>
    </div>
  </div>

  <div class="form-group row mt-3 justify-content-center">
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<% end %>
