<h1 class="text-center mt-4">Groups/Regions</h1>

<div class="container">
  <% @regions.reverse_each do |region| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to region.region, region_path(region), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(region.groups.count, "group") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(region.created_at) %> ago, 
            edited <%= time_ago_in_words(region.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
